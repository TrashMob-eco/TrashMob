<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TrashMobMobile.ViewModels"
             x:Class="TrashMobMobile.Pages.EditEventSummaryPage"
             Title="Event Summary">
    <ScrollView>
        <Grid>
            <VerticalStackLayout Spacing="5">

                <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="1*">
                    <Border Style="{x:StaticResource RoundBorder}" Margin="5,0" Grid.Row="0">
                        <Grid RowDefinitions = "Auto, Auto, Auto, Auto" ColumnDefinitions="1*, 1*, 1*">
                            <Label Text="Please lets us know what TrashMob volunteers accomplished at this event!" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" FontSize="Micro" Margin="0, 0, 0, 10" />
                            <Image Grid.Row="1" Grid.Column="0" Source="person.svg" MaximumWidthRequest="25" />
                            <Entry Grid.Row="2" Grid.Column="0" Text="{ Binding EventSummaryViewModel.ActualNumberOfAttendees }" Keyboard="Numeric" />
                            <Label Grid.Row="3" Grid.Column="0" Text="Attendees" FontSize="Micro" HorizontalTextAlignment ="Center" />
                            <Image Grid.Row="1" Grid.Column="1" Source="trashbag.svg" WidthRequest="25" />
                            <Entry Grid.Row="2" Grid.Column="1" Text="{ Binding EventSummaryViewModel.NumberOfBags }" Keyboard="Numeric" />
                            <Label Grid.Row="3" Grid.Column="1" Text="Bags Collected" FontSize="Micro" HorizontalTextAlignment ="Center" />
                            <Image Grid.Row="1" Grid.Column="2" Source="clock.svg" WidthRequest="25"/>
                            <Entry Grid.Row="2" Grid.Column="2" Text="{ Binding EventSummaryViewModel.DurationInMinutes }" Keyboard="Numeric" />
                            <Label Grid.Row="3" Grid.Column="2" Text="Duration in Minutes" FontSize="Micro" HorizontalTextAlignment ="Center" />
                        </Grid>
                    </Border>
                </Grid>

                <VerticalStackLayout Spacing="5" Grid.Row="1" Margin="10">
                    <Label 
                        Text="Notes"
                        FontSize="Micro"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Center"
                        FontAttributes="Bold" />
                    <Border Style="{x:StaticResource RoundBorder}">
                        <Entry 
                        Text="{Binding EventSummaryViewModel.Notes}"
                        VerticalOptions="Center" 
                        HorizontalOptions="StartAndExpand"
                        HorizontalTextAlignment="Center"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Save Event Summary" Command="{Binding SaveEventSummaryCommand}" IsVisible="{Binding EnableSaveEventSummary}" Grid.Row="2" Margin="10"/>
            </VerticalStackLayout>
            <BoxView BackgroundColor="{StaticResource TransparentBlack}" HorizontalOptions="Fill" VerticalOptions="Fill" IsVisible="{Binding IsBusy}"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>
