<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TrashMobMobile.Controls"
             x:Class="TrashMobMobile.Controls.LogPickupPopup">

    <Border Padding="24"
            BackgroundColor="{AppThemeBinding Light={StaticResource CardLight}, Dark={StaticResource CardDark}}"
            StrokeShape="RoundRectangle 16"
            Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
            StrokeThickness="1"
            WidthRequest="300">
        <VerticalStackLayout Spacing="16">

            <Label Text="Log Pickup"
                   FontFamily="LexendSemibold"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource ContentPrimary}, Dark={StaticResource ContentPrimaryDark}}" />

            <Label Text="How much litter did you collect on this route?"
                   FontSize="13"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource MutedForegroundLight}, Dark={StaticResource MutedForegroundDark}}" />

            <!-- Bags -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Bags Collected" FontSize="13" FontFamily="LexendSemibold" />
                <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Button Text="-" WidthRequest="44" HeightRequest="44"
                            Style="{StaticResource SecondarySmallButton}"
                            Clicked="OnBagsDecrement" />
                    <Label x:Name="bagsLabel" Text="0"
                           FontSize="20" FontFamily="LexendSemibold"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           WidthRequest="50" />
                    <Button Text="+" WidthRequest="44" HeightRequest="44"
                            Style="{StaticResource SecondarySmallButton}"
                            Clicked="OnBagsIncrement" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Weight -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Weight Collected" FontSize="13" FontFamily="LexendSemibold" />
                <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                    <controls:TMEntry x:Name="weightEntry"
                                      Keyboard="Numeric"
                                      WidthRequest="100"
                                      Placeholder="0.0" />
                    <Picker x:Name="unitPicker"
                            WidthRequest="80">
                        <Picker.Items>
                            <x:String>lbs</x:String>
                            <x:String>kg</x:String>
                        </Picker.Items>
                    </Picker>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Notes -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Notes (optional)" FontSize="13" FontFamily="LexendSemibold" />
                <controls:TMEntry x:Name="notesEntry"
                                  Placeholder="e.g. Lots of plastic bottles" />
            </VerticalStackLayout>

            <Button Text="Save"
                    Style="{StaticResource PrimaryLargeButton}"
                    Clicked="OnSaveClicked" />

            <Button Text="Cancel"
                    Style="{StaticResource SecondaryLargeButton}"
                    Clicked="OnCancelClicked" />

        </VerticalStackLayout>
    </Border>
</ContentView>
