{
  "kind": "collectionType",
  "collectionName": "news_posts",
  "info": {
    "singularName": "news-post",
    "pluralName": "news-posts",
    "displayName": "News Post",
    "description": "Blog posts and news articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "TrashMob Team",
      "maxLength": 100
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::news-category.news-category"
    },
    "tags": {
      "type": "json"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "estimatedReadTime": {
      "type": "integer"
    }
  }
}
