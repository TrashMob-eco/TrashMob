@page "/events/createevent"

<style>
    .tm-create-event-container {
        height: 100%;
        padding: 20px;
    }

        .tm-create-event-container .tm-loader {
            top: 50%;
            position: fixed;
        }

        .tm-create-event-container .tm-back-btn-container {
            margin-bottom: 10px;
        }

        .tm-create-event-container .tm-action-btn-container {
            margin-top: 10px;
            bottom: 10px;
            right: 10px;
        }
</style>

<ErrorBoundary>
    <ChildContent>
        @if (_step == EventStep.STEP_1)
        {
            <CreateEventStep1 @bind-Event="@_event" OnStepFinished="() => OnNextStep(EventStep.STEP_2)" />
        }
        else if (_step == EventStep.STEP_2)
        {
            <CreateEventStep2 @bind-Event="@_event" OnStepFinished="() => OpenMap()" />
        }
        // Step 3 is a map step. A little different
        else if (_step == EventStep.STEP_4)
        {
            <CreateEventStep4 @bind-Event="@_event" OnStepFinished="() => OnNextStep(EventStep.STEP_5)" />
        }
        else if (_step == EventStep.STEP_5)
        {
            <CreateEventStep5 @bind-Event="@_event" OnStepFinished="() => OnNextStep(EventStep.STEP_6)" />
        }
        else if (_step == EventStep.STEP_6)
        {
            <CreateEventStep6 @bind-Event="@_event" OnStepFinished="@OnFinished" />
        }
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>
