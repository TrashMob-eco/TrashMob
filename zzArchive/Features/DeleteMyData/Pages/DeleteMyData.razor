@page "/deletemydata"
@using System.ComponentModel.DataAnnotations

@*TODO: move to styles sheet*@
<style>
    .tm-deletemydata-container {
        height: 100%;
        padding: 20px;
    }

        .tm-deletemydata-container .tm-form {
            margin-top: 10%;
        }

            .tm-deletemydata-container .tm-form .tm-form-item {
                margin-top: 20px;
            }

            .tm-deletemydata-container .tm-form .tm-action-item {
                position: fixed;
                bottom: 5%;
                width: 90%;
            }

        .tm-deletemydata-container .tm-deletemydata-submit-btn {
            margin-top: 10%;
            width: 100%;
        }
</style>

<ErrorBoundary>
    <ChildContent>
        <MudContainer Class="tm-deletemydata-container">
            <MudText Typo="Typo.body2">
                If you no longer wish to be a member of the TrashMob.eco community, clicking the link below will take you to the TrashMob.eco website where you can delete your data.
            </MudText>
            <br />
            <MudText Typo="Typo.body2">
                We are sorry to see you go!
            </MudText>
            <br />
            <MudText Typo="Typo.subtitle1">
                The Team at TrashMob.eco
            </MudText>
            <br />
            <MudLink Href="https://www.trashmob.eco/deletemydata" Color="Color.Primary" Underline="Underline.Always">Delete My Data</MudLink>
        </MudContainer>
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>