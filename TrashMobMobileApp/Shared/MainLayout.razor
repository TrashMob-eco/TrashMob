@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Style="padding-left: 16px; padding-right: 16px">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudContainer Style="width: 100%; text-align: center;">
            @_pageTitle
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudDrawerHeader>
            <MudStack Row>
                <MudAvatar Color="Color.Primary">@_userInitials</MudAvatar>
                <MudStack Class="gap-y-0">
                    <MudText Typo="Typo.body2">@App.CurrentUser?.UserName</MudText>
                </MudStack>
            </MudStack>
        </MudDrawerHeader>
        <MudDivider />
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="@_theme" />
<MudDialogProvider />
<MudSnackbarProvider />