@page "/waiver"
@using System.ComponentModel.DataAnnotations

@*TODO: move to styles sheet*@
<style>
    .tm-waiver-container {
        height: 100%;
        padding: 20px;
    }

        .tm-waiver-container .tm-form {
            margin-top: 10%;
        }

            .tm-waiver-container .tm-form .tm-form-item {
                margin-top: 20px;
            }

            .tm-waiver-container .tm-form .tm-action-item {
                position: fixed;
                bottom: 5%;
                width: 90%;
            }

        .tm-waiver-container .tm-waiver-submit-btn {
            margin-top: 10%;
            width: 100%;
        }
</style>

<ErrorBoundary>
    <ChildContent>
        <MudContainer Class="tm-waiver-container">
            <MudOverlay @bind-Visible="_isLoading" Absolute>
                <MudProgressCircular Color="ComponentCommon.DefaultColor" Indeterminate Class="tm-loader" />
            </MudOverlay>
            <MudText Typo="Typo.body1">
                In order to create or participate in TrashMob.eco events, you must agree to a liability waiver. Please click the
                <span className='color-primary'> Sign Waiver</span> button below. This will open a browser which will ask you to view and sign the waiver.
                Once that is done, you will be redirected to the TrashMob.eco <b>website</b> to sign in and complete the waiver signing experience there. If you don't complete that last step, you will
                need to repeat the process.
            </MudText>
            <MudText Typo="Typo.body1">
                You will only need to sign this waiver once unless we have to change the legalese.
            </MudText>
            <MudText Typo="Typo.body1">
                Thank you!
            </MudText>
            <MudTextField T="string" Class="tm-form-item" Label="Full Name" @bind-Text="FullName" Variant="ComponentCommon.TextFieldVariant" Required RequiredError="Full Name is required" />
            <MudStack Row Justify="Justify.Center" Class="tm-action-item">
                <MudButton FullWidth Variant="@ComponentCommon.ButtonFilled" Color="ComponentCommon.PrimaryColor" OnClick="@OnSignWaiverAsync">Sign Waiver</MudButton>
            </MudStack>
        </MudContainer>
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>