@page "/events/completeevent/{EventId}/{IsReadOnly:bool}"

<MudTabs Centered Style="width: 100%" Color="ComponentCommon.PrimaryColor" @bind-ActivePanelIndex="@StateInformation.CurrentlyActiveCompleteEventTab">
    <MudTabPanel Text="Summary">
        <EditEventSummary EventId="@EventId" IsReadOnly="@IsReadOnly" />
    </MudTabPanel>
    <MudTabPanel Text="Pickup Locations">
        <PickupLocationList EventId="@EventId" IsReadOnly="@IsReadOnly" />
    </MudTabPanel>
</MudTabs>