@page "/events/editevent/{EventId}"

<MudTabs Centered Style="width: 100%" Color="ComponentCommon.PrimaryColor" @bind-ActivePanelIndex="@StateInformation.CurrentlyActiveEditEventTab">
    <MudTabPanel Text="Details">
        <EditMyEvent EventId="@EventId" />
    </MudTabPanel>
    <MudTabPanel Text="Location">
        <EditEventLocation EventId="@EventId" />
    </MudTabPanel>
    <MudTabPanel Text="Partners">
        <EditEventPartners Event="@Event"/>
    </MudTabPanel>
</MudTabs>

