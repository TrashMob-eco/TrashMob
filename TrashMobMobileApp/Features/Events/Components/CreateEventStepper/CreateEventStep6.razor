@namespace TrashMobMobileApp.Features.Events.Components

<style>
    .tm-step6-container {
        height: 100%;
        padding: 20px;
    }

        .tm-step6-container .tm-loader {
            top: 50%;
            position: fixed;
        }

        .tm-step6-container .container-item {
            margin-top: 10px;
        }

        .tm-step6-container .next-btn {
            margin-top: 10%;
            width: 100%;
        }
</style>

<ErrorBoundary>
    <ChildContent>
        <MudButton FullWidth Variant="ComponentCommon.ButtonFilled" Color="ComponentCommon.PrimaryColor" OnClick="@OnStepFinishedAsync">Done</MudButton>
        <EditEventPartners Event="@Event" />
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>
